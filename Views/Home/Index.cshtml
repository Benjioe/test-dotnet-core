@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")

    <script src="/js/DifferenteValueValidation.js"></script>
    <script type="text/javascript">
        $(function() {
            $("#classement-form input").change(function() {
                $(this).valid();
            });
        });
    </script>
}


<div class="row">
    <p>
        1) J'injecte le service<br />
        2 ?) Je l'ajoute à la configuration MVC<br />
        3) Je le configure<br />
    </p>
</div>

<div class="row">
    <h2>Cohérence</h2>
    <ul>
        <li>Implicite operator + view</li>
        <li>Attribut sur des interfaces</li>
        <li>Interface en paramètre des actions des controlleurs</li>
        <li>Remote => spécifier le paramètre injecté</li>
    </ul>
</div>

<div class="row">
    <h2>Magie</h2>
    <ul>
        <li>L'authentification</li>
        <li>Le passages de paramètre au TagHelper</li>
        <li><a href="https://forums.asp.net/t/1931780.aspx?Preventing+model+validation+on+first+time+load">L'injection automartique d'objet vide dans les controlleurs</a></li>
    </ul>
</div>
<div class="row truc-cool">
    <div>
        @Html.Partial("TrucCool/Configuration")
    </div>
</div>

<div class="row truc-cool">
    <div>
        @Html.Partial("TrucCool/Elm")
    </div>
</div>

<div class="row truc-cool">
    <div>
        @Html.Partial("TrucCool/ErrorPage")
    </div>
</div>

<div class="row truc-cool">
    <div>
        @Html.Partial("TrucCool/Route")
    </div>
</div>

<div class="row">

<form asp-controller="Home" asp-action="Classement" method="post" id="classement-form">
    <div class="form-group">
        <label asp-for="PremierTrucCool">C'est quoi votre truc cool préféré ?</label>
        <input type="input" class="form-control" asp-for="PremierTrucCool" />
        <span asp-validation-for="PremierTrucCool"></span>
    </div>

    <div class="form-group">
        <label asp-for="SecondTrucCool">Et le second ?</label>
        <input type="input" class="form-control" asp-for="SecondTrucCool" />
        <span asp-validation-for="SecondTrucCool"></span>
    </div>

    
    <button type="submit">Envoyer</button>

</form>


</div>